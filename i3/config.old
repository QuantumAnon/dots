# Modifier keys
set $mod Mod4
set $alt Mod1

# Screen modes
bindsym $mod+n exec "echo single > /home/gautam/.config/i3/state.txt"; exec --no-startup-id "/home/gautam/.config/polybar/launch.sh"; restart; "wal -R -a 80";
bindsym $mod+Shift+n exec "echo multi > /home/gautam/.config/i3/state.txt"; exec --no-startup-id "/home/gautam/.config/polybar/launch.sh"; restart; "wal -R -a 80";

# open checker
bindsym $mod+c exec urxvt -e Checker.sh

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym $mod+o exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym Ctrl+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% #increase sound volume
bindsym $mod+Shift+o exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1% #increase sound volume

bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym $mod+i exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym Ctrl+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% #decrease sound volume
bindsym $mod+Shift+i exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1% #decrease sound volume

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound
bindsym $mod+m exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound


# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# screen lock
bindsym $alt+Control+Delete exec "xautolock -locknow"

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Noto Mono 11

# Use Mouse+$mod to drag floating windows to their wanted position
