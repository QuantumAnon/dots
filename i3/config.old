exec "echo single > /home/gautam/.config/i3/state.txt"
exec "wal -R -a 80"
#exec "urxvt -e Checker.sh"
exec "mpd"
exec "mpdscribble"
exec "~/.fehbg &"
exec "/usr/bin/lastfmsubmitd"
