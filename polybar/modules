[module/xwindow]
    type = internal/xwindow
    label = %title:0:50:...%

[module/i3]
    type = internal/i3
    ws-icon-0 = "1;: %{T6}%{T-}"
    ws-icon-1 = "2;: %{T5}%{T-}"
    ws-icon-2 = "3;: %{T5}%{T-}"
    ws-icon-3 = "4;: %{T5}%{T-}"
    ws-icon-4 = "5;: %{T5}%{T-}"

    format = <label-state> <label-mode>
    index-sort = true
    wrapping-scroll = false
    
    ; Only show workspaces on the same output as the bar
    ; pin-workspaces = true
    

    label-mode-padding = 0
    label-mode-foreground = ${colors.foreground}
    label-mode-background = ${colors.background}
    
    ; focused = Active workspace on focused monitor
    label-focused = "%index%%icon%"
    label-focused-foreground = ${colors.foreground}
    label-focused-background = ${colors.background}
    label-focused-underline = ${colors.alert}
    label-focused-padding = 2
    
    ; unfocused = Inactive workspace on any monitor
    label-unfocused = "%index%%icon%"
    label-unfocused-foreground = ${colors.background}
    label-unfocused-background = ${colors.foreground}
    label-unfocused-padding = 2
    
    ; visible = Active workspace on unfocused monitor
    label-visible = "%index%%icon%"
    label-visible-background = ${self.label-focused-foreground}
    label-visible-foreground = ${colors.foreground-2}
    label-visible-padding = 2
    
    ; urgent = Workspace with urgency hint set
    label-urgent = "%index%%icon%"
    label-urgent-background = ${colors.alert}
    label-urgent-padding = 2

[module/i3mini]
    inherit = module/i3
    
    label-focused-padding = 1
    label-unfocused-padding = 1
    label-focused = "%index%"
    label-unfocused = "%index%"
    label-visible = "%index%"
    label-urgent = "%index%"

    ; Only show workspaces on the same output as the bar
    pin-workspaces = true


[module/mpd]
    type = internal/mpd
    
    host = 127.0.0.1
    port = 6600
    
    ; Seconds to sleep between progressbar/song timer sync
    ; Default: 1
    interval = 2
    
    format-online =  <icon-prev>|<label-song>|<toggle>|<icon-next>

    format-offline = <label-offline>
    label-offline = "MPD server disconnected"
    
    icon-prev = "%{T5}%{T-}"
    icon-stop = "%{T5}%{T-}"
    icon-play = "%{T5}%{T-}"
    icon-pause = "%{T5}%{T-}"
    icon-next = "%{T5}%{T-}"
    
    label-song = "%title% - %artist%"
    label-song-maxlen = 50
    label-song-ellipsis = true

[module/wlan]
    type = internal/network
    interface = wlp2s0
    interval = 3.0
    
    format-connected = <label-connected>
    format-connected-underline = ${colors.foreground-2}
    label-connected = "%{T5}%{T-}%downspeed:9%/%upspeed:9%"
    
    format-disconnected = 
    

    format-packetloss = <animation-packetloss> <label-connected>
    
    ; Only applies if <animation-packetloss> is used
    animation-packetloss-0 = "%{T5}%{T-}"
    animation-packetloss-0-foreground = ${colors.foreground}
    animation-packetloss-1 = "%{T5}%{T-}"
    animation-packetloss-1-foreground = ${colors.foreground}
    ; Framerate in milliseconds
    animation-packetloss-framerate = 500

[module/eth]
    type = internal/network
    interface = enp1s0
    interval = 3.0
    
    format-connected = <label-connected>
    format-connected-underline = ${colors.foreground-2}
    format-connected-prefix-foreground = ${colors.foreground}
    label-connected = "%{T5}%{T-}%downspeed:9%/%upspeed:9%"
    
    format-disconnected =
[module/time]
    type = internal/date
    interval = 1
    
    date = "%a %d-%m"
    date-alt = "%F"
    
    time = "%R"
    time-alt = "%T"
    
    format-underline = #00000000
   
 
    label = "%{T5}%{T-} %date% %{T5}%{T-} %time%"

[module/volume]
    type = internal/pulseaudio
    
    ; Soundcard to be used
    master-soundcard = default
    speaker-soundcard = default
    headphone-soundcard = default
    
    ; Name of the master mixer
    ; Default: Master
    master-mixer = Master
    
    ; Use volume mapping (similar to amixer -M and alsamixer), where the increase in volume is linear to the ear
    ; Default: false
    mapping = true
    
    format-volume = <label-volume> <bar-volume>
    label-volume = VOL
    label-volume-foreground = ${colors.foreground}
    
    format-muted-prefix = "%{T5}%{T-} "
    format-muted-foreground = ${colors.foreground-2}
    label-muted = "sound muted"
    
    bar-volume-width = 10
    bar-volume-foreground-0 = #556699
    bar-volume-foreground-1 = #557788
    bar-volume-foreground-2 = #558877
    bar-volume-foreground-3 = #559966
    bar-volume-foreground-4 = #55aa55
    bar-volume-foreground-5 = #f5a70a
    bar-volume-foreground-6 = #ff5555
    bar-volume-gradient = false
    bar-volume-indicator = |
    bar-volume-indicator-font = 2
    bar-volume-fill = ─
    bar-volume-fill-font = 2
    bar-volume-empty = ─
    bar-volume-empty-font = 2
    bar-volume-empty-foreground = ${colors.foreground-2}

[module/battery]
    type = internal/battery
    battery = BAT0
    adapter = ADP0
    full-at = 98
    
    format-charging = <label-charging>
    label-charging = "%{T5}%{T-} %percentage%"
    format-charging-underline = ${colors.foreground-2}


    format-discharging = <ramp-capacity> <label-discharging>
    label-discharging = "%percentage%"
    format-discharging-underline = ${colors.background}
    

    format-full = <label-full>
    label-full = " %percentage%"
    format-full-underline = ${colors.foreground}

    ramp-capacity-0 = 
    ramp-capacity-1 = 
    ramp-capacity-2 = 
    ramp-capacity-3 = 
    ramp-capacity-4 = 

[module/fedorabutton]
    type = custom/text

    content = "%{T6}%{T-}"
    content-foreground = ${colors.foreground}
    content-background = ${colors.background}
    content-padding = 1
    click-left = "$XDG_CONFIG_HOME/polybar/fedoramenu.sh"

[module/textspace]
    type = custom/text

    content = " | "

[module/redshift]
  type = custom/script
  exec = "$XDG_CONFIG_HOME/polybar/redshift.sh"
  interval = 5