[module/mpd]
type = internal/mpd

host = 127.0.0.1
port = 6600

; Seconds to sleep between progressbar/song timer sync
; Default: 1
interval = 2

format-online = <label-song> -- <icon-prev>|<icon-stop>|<toggle>|<icon-next>

icon-prev = Prev
icon-stop = Stop
icon-play = Play
icon-pause = Pause
icon-next = Next

label-song-maxlen = 50
label-song-ellipsis = true

[module/music]
