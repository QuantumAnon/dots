[module/time]
type = internal/date
interval = 1

date = "%d-%m-%Y"
date-alt = "%Y-%m-%d"

time = "%R"
time-alt = "%T"

format-prefix = 
format-prefix-foreground = ${colors.foreground}
format-underline = #00000000

label = %time%

[module/date]
type = internal/date
